{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "@modelcontextprotocol/sdk>ajv": "8.18.0",
      "@modelcontextprotocol/sdk>hono": "4.12.0",
      "@modelcontextprotocol/sdk>qs": "6.15.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "protobufjs",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "packages/cli/src/**/*.ts": [
      "bash -c 'cd packages/cli && npx tsc --noEmit'"
    ],
    "packages/core/src/**/*.ts": [
      "bash -c 'cd packages/core && npx tsc --noEmit'"
    ],
    "packages/ai-sdk/src/**/*.ts": [
      "bash -c 'cd packages/ai-sdk && npx tsc --noEmit'"
    ],
    "packages/web/src/**/*.{ts,tsx}": [
      "bash -c 'cd packages/web && npx eslint --max-warnings 0'"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
